    "eslint": "^5.9.0",
    "eslint-config-lddubeau-base": "^3.0.1",
    "husky": "^1.2.0",
    "mocha": "^5.2.0",
    "xml-conformance-suite": "^1.1.0"
  },
  "dependencies": {
    "xmlchars": "^1.3.1"
